<div class="container">
  <h2>New Game</h2>

  <% @letters.each do |letter| %>
    <div class="btn btn-primary">
      <%= letter %>
    </div>
  <% end %>
  <p></p>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <input type="text" name="score" placeholder="Your word ..." class="form-control-sm">
    <input type="submit" value="Play" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
